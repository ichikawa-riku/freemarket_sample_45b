= render 'shared/header'
- breadcrumb :bought_user
%nav.bread-crumbs
  = breadcrumbs separator: " #{content_tag(:i, '', :class=>'fa fa-angle-right')} "
.maypage
  %main.mypage__body.clearfix
    .mypage__body__main
      %section.users-products-box
        %h1.users-products-box__title
          購入した商品
        %main.users-products-buy-tabs-main
          .mypage-buy-status-columns.clearfix
            = link_to "取引中", buy_user_path(current_user.id), class: "mypage-buy-status-columns__column"
            = link_to "過去の取引", bought_user_path(current_user.id), class: "mypage-buy-status-columns__column mypage-buy-status-columns__column--active"
          .publised-products
            = render partial: 'product', locals: { product: @products }
        
 
    = render "shared/mypage-sidebar"

= render 'shared/appbanner'

= render 'shared/footer'

= render 'shared/sellbtn'